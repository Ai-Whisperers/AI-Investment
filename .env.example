# Waardhaven AutoIndex Environment Variables
# Copy this file to .env and fill in your values

# === BACKEND (FastAPI) ===
# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/waardhaven_db

# JWT Secret key for authentication (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-min-32-chars

# Admin token for protected endpoints
ADMIN_TOKEN=your-admin-token-here

# TwelveData API key for market data
TWELVEDATA_API_KEY=your-twelvedata-api-key

# Optional: S&P 500 ticker symbol (default: ^GSPC)
SP500_TICKER=^GSPC

# Optional: Daily drop threshold for outlier detection (default: -0.01)
DAILY_DROP_THRESHOLD=-0.01

# Optional: Default start date for asset data (default: 2018-01-01)
ASSET_DEFAULT_START=2018-01-01

# Optional: Refresh mode (default: smart)
# Options: smart, full, incremental
REFRESH_MODE=smart

# Optional: Debug mode (default: false)
DEBUG=false

# === REDIS & CACHING ===
# Redis URL for caching and Celery (optional - will work without it)
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300

# Long cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL_LONG_SECONDS=3600

# === FRONTEND (Next.js) ===
# Backend API URL (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL=http://localhost:8000

# === DEPLOYMENT (Render.com) ===
# These are set automatically by Render
# PORT=10000
# RENDER=true
# FRONTEND_URL=https://your-frontend.onrender.com