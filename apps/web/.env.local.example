# Local development environment variables for Waardhaven Web Frontend
# Copy this file to .env.local and update values as needed

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_SMART_REFRESH=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true

# Default Settings
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_REFRESH_INTERVAL=60000

# Development Tools
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug