# Production environment variables for Waardhaven Web Frontend
# This file is used when building for production deployment

# API Configuration - MUST MATCH ACTUAL RENDER DEPLOYMENT URL
NEXT_PUBLIC_API_URL=https://waardhaven-api-backend.onrender.com

# Optional: Custom domain (if configured)
# NEXT_PUBLIC_API_URL=https://api.waardhaven.com

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_SMART_REFRESH=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=false

# Default Settings
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_REFRESH_INTERVAL=60000