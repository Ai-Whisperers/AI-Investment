# Frontend Environment Configuration Example
# Copy this file to .env and update with your actual values
# SECURITY WARNING: Never commit .env file to version control!

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Waardhaven AutoIndex
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Features Configuration
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Google OAuth Configuration (Add your credentials)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=info

# Optional: Analytics
NEXT_PUBLIC_GA_ID=

# Production URLs (for reference - comment out for local dev)
# NEXT_PUBLIC_API_URL=https://waardhaven-api-backend.onrender.com
# NEXT_PUBLIC_WS_URL=wss://waardhaven-api-backend.onrender.com
